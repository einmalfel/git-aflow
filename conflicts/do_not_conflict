#!/usr/bin/python3


from conflicts import get_first_conflict
from conflicts import dprint
from sys import argv


if __name__ == "__main__":
    dprint("launched as: " + ' '.join(argv))
    result = get_first_conflict(argv[1:])
    if result is None:
        print("no conflicts detected")
        exit(0)
    else:
        print(result[0] + " conflicts with "
              + result[1] + " in file " + result[2])
        exit(1)
